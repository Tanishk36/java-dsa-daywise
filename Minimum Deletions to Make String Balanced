class Solution {
    public int minimumDeletions(String s) {
        int delete=0;
        int bcount=0;

        for (char c : s.toCharArray()) {
            if(c =='b'){
                bcount++;
            }else{
                delete=Math.min(delete+1,bcount);
                
            }
        }
        
        return delete;
    }
}
